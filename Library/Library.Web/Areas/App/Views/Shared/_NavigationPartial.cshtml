@{
    var currentController = this.ViewContext.RouteData.Values["controller"].ToString();
    var activeStyle = "background-color: rgba(0,0,0, 0.3)";
    var bookStyle = "";
    var ebookStyle = "";
    var noteStyle = "";
    var lendbookStyle = "";
    var studentStyle = "";
    var renewStyle = "";
    if (currentController.Equals("Book"))
    {
        bookStyle = activeStyle;
    }
    else if (currentController.Equals("EBook"))
    {
        ebookStyle = activeStyle;
    }
    else if (currentController.Equals("Note"))
    {
        noteStyle = activeStyle;
    }
    else if (currentController.Equals("Student"))
    {
        studentStyle = activeStyle;
    }
    else if (currentController.Equals("LendBook"))
    {
        lendbookStyle = activeStyle;
    }
    else if (currentController.Equals("Renew"))
    {
        renewStyle = activeStyle;
    }

}

<aside class="main-sidebar sidebar-dark-primary elevation-4 devtrack-gradient-bg">
    <!-- Brand Logo -->
    <a asp-area="" asp-controller="Home" asp-action="Index" class="brand-link">
        <img src="~/resources/img/nstu.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light"><b>Library-ICE</b></span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user (optional) -->

        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                <li class="nav-item" style="@bookStyle">
                    <a class="nav-link white-color" asp-action="Index" asp-controller="Book" asp-area="App">
                        <i class="nav-icon fas fa-columns"></i>
                        <p>
                            Books
                        </p>
                    </a>
                </li>
                <li class="nav-item" style="@ebookStyle">
                    <a class="nav-link" asp-action="Index" asp-controller="EBook" asp-area="App">
                        <i class="nav-icon fas fa-columns"></i>
                        <p>
                            EBooks
                        </p>
                    </a>
                </li>
                <li class="nav-item" style="@noteStyle">
                    <a class="nav-link" asp-action="Index" asp-controller="Note" asp-area="App">
                        <i class="nav-icon far fa-copy"></i>
                        <p>
                            Notes
                        </p>
                    </a>
                </li>
                <li class="nav-item" style="@studentStyle">
                    <a class="nav-link" asp-action="Index" asp-controller="Student" asp-area="App">
                        <i class="nav-icon fas fa-chart-pie"></i>
                        <p>
                            Students
                        </p>
                    </a>
                </li>
                <li class="nav-item" style="@lendbookStyle">
                    <a class="nav-link white-color" asp-action="Index" asp-controller="LendBook" asp-area="App">
                        <i class="nav-icon fas fa-columns"></i>
                        <p>
                            Lend Books
                        </p>
                    </a>
                </li>
                <li class="nav-item" style="@renewStyle">
                    <a class="nav-link white-color" asp-action="Index" asp-controller="Renew" asp-area="App">
                        <i class="nav-icon fas fa-columns"></i>
                        <p>
                            Renew Requests
                        </p>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
