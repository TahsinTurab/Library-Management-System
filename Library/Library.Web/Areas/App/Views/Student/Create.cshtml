@model StudentCreateModel;
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-6">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col-6">
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- Column -->
            <div class="col-12">
                <!-- Card -->
                <div class="card">
                    <div class="card-header p-2">
                        <h3 class="card-title mr-10 ml-20 mt-10">General</h3>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="card card-info">
                                <!-- form start -->
                                <form class="form-horizontal" method="post" asp-antiforgery="true" asp-action="Create" asp-controller="Student" asp-area="App">
                                    <div class="card-body">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group row" style="padding-bottom: 12px;">
                                            <label class="col-sm-2 col-form-label" asp-for="Name">Student Name</label>
                                            <div class="col-sm-4">
                                                <input type="text" class="form-control" asp-for="Name" placeholder="Name" required>
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row" style="padding-bottom: 12px;">
                                            <label class="col-sm-2 col-form-label" asp-for="StudentId">Student Id</label>
                                            <div class="col-sm-4">
                                                <input type="text" class="form-control" asp-for="StudentId" placeholder="Student Id" required>
                                                <span asp-validation-for="StudentId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row" style="padding-bottom: 12px;">
                                            <label class="col-sm-2 col-form-label" asp-for="Email">Student Email</label>
                                            <div class="col-sm-4">
                                                <input type="text" class="form-control" asp-for="Email" placeholder="Student Email" required>
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <button type="submit" class="btn btn-success float-right" style="margin-left: 26px;">Add Student</button>
                                            <button class="btn btn-default float-right" type="reset" value="Reset"
                                                    onclick="location.href='@Url.Action("Index", "Student", new { Area = "App" })'">
                                                Cancel
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.column -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}

